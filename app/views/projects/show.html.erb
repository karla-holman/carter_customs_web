<!-- Header hero image -->
<div class="project-hero" style="background-image: url(<%= @project.main_image.url(:large) %>);" >
</div>

<!-- About Us -->
<div class="dark-blue">
  <div class="blue-circle wheel">
    <h5>Project Info</h5>
    <%= image_tag "line_art/wheel.png" %>
  </div>
  <div class="container">
    <div class="row mobile-center">
      <div class="col-md-6">
        <h4><%= @project.name %></h4>
        <p><span style="font-weight: 500">Completion Date:</span> <%= @project.complete_date.strftime('%B %d, %Y') || 'In Progress' %></h5>
        <p><%= @project.description %></p>
        <p><%= link_to '< Back to Projects', '/#projects' %></p>
      </div>
      <div class="col-md-6">
        <%= link_to @project.main_image.url(:large), target: '_blank' do %>
          <%= image_tag @project.main_image.url(:large), style: "width: 100%" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="project-images">
  <div class="container">
    <div class="row">
      <% @project.images.each do |image| %>
        <div class="col-md-6">
          <%= link_to image.image_attach.url(:large), target: '_blank' do %>
            <%= image_tag image.image_attach.url(:large) %>
            <h4><%= image.name %></h4>
          <% end %>
          <p><%= image.description %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
