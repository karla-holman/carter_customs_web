<!-- Store -->
<a name="store"></a> 
<div class="dark-blue">
  <div class="blue-circle wheel">
    <h5>Store</h5>
    <%= image_tag "line_art/wheel.png" %>
  </div>
  <div class="container">
    <div class="row centered">
      <div class="col-md-4">
        <h4>Carter Custom Swag</h4>
        <p>Grab a ball cap or a shot glass, something to remember your time with us.</p>
        <%= image_tag "line_art/lines.png", class: "line-image-wide" %>
      </div>
      <% if @products.empty? %>
        <div class="col-md-8">
          <p>No Products available for sale</p>
        </div>
      <% else %>
        <% @products.each do |product| %>
          <div class="col-xs-6 col-sm-4 col-md-2">
            <%= link_to spree.product_path(product) do %>
              <% if !product.images.empty? %>
                <%= image_tag product.images.first.attachment.url(:product), class: "shop-img" %>
              <% else %>
                <%= image_tag "no-image.jpg", class: "shop-img" %>
              <% end %>
            <% end %>
            <p style="font-weight: 700; line-height: 1.2em"><%= link_to spree.product_path(product) do %><%= product.name %><% end %></p>
            <p><%= number_to_currency(product.price) %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

