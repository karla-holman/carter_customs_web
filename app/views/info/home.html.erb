  </div>

  <div class="container projects">
    <div class="row centered">
      <% @projects.each do |project| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%= image_tag project.main_image.url(:medium), alt: project.name %>
            <div class="caption">
              <h4><%= project.name %></h4>
              <p><%= project.short_description %></p>
              <p><%= link_to project_path(project), class: 'btn btn-primary', role: 'button' do %>View<% end %><%= link_to '#', class: 'btn btn-default', role: 'button' do %>Share<% end %></p>
