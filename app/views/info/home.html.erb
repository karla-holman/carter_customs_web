<!-- Header hero image -->
<div class="hero" style="background-image: url(<%= asset_path('welding.jpg') %>);" >
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-6 col-md-4 col-md-offset-7">
        <h3>Custom Motorcycles</h3>
        <p>A one stop shop. From fabrication to paint to general maintenance.</p>
        <%= link_to "Contact Us", "#contact", class: "btn btn-default btn-lg" %>
      </div>
    </div>
  </div>
</div>

<!-- About Us -->
<a id="about"></a>
<div class="dark-blue">
  <div class="blue-circle wheel">
    <h5>About</h5>
    <%= image_tag "line_art/wheel.png" %>
  </div>
