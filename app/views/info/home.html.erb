<!-- Contact -->
<a id="contact"></a>
<div class="contact" style="background-image: url(<%= asset_path('backgrounds/shop.jpg') %>)">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h4>Contact Form</h4>
        <%= form_for @contact, :url => "/contact" do |f| %>
          <%= f.text_field(:first_name, placeholder: "First Name (required)", :required => true, class: "form-control") %>

            <%= f.text_field(:last_name, placeholder: "Last Name", class: "form-control") %>

            <%= f.text_field(:email, placeholder: "Email (required)", :required => true, class: "form-control") %>

            <%= f.text_field(:phone, placeholder: "Phone", class: "form-control") %>

            <%= f.text_field(:subject, placeholder: "Subject (required)", :required => true, class: "form-control", style: "width: 100%") %>

            <div class="clearfix"></div>

            <%= f.text_area(:message, placeholder: "Message", size: "24x6", class: "form-control") %>

            <%= f.submit(class: "btn btn-default btn-sm", style: "margin-left: auto; margin-right: auto; width: 200px; float: none; left: 0; right: 0") %>
